@model IndexViewModel
@{
    ViewData["Title"] = "Welcome";
}

@{
	var books = Model.Books;
	var firstBook = books.Any() ? books[0] : null;
	var secondBook = books.Count > 1 ? books[1] : null;
	var thirdBook = books.Count > 2 ? books[2] : null;
}

@if (!books.Any())
{
	<div class="jumbotron">
		<h1 class="display-4">Book your book!</h1>
		<p class="lead">There are no books in the system, would you like to add some?</p>
		<hr class="my-4">
		<p>It uses utility classes for typography and spacing to space content out within the larger container.</p>
		<a asp-controller="Books" asp-action="Add" class="btn btn-primary btn-lg" role="button">Learn more</a>
	</div>
}

<div id="carouselExampleControls" class="carousel slide mt-5" data-ride="carousel">
	<div class="carousel-inner">
		@if (firstBook != null)
		{
			<div class="carousel-item active align-items-center">
				<img class="d-block w-25" src="@firstBook.ImageUrl" alt="@firstBook.Title @firstBook.Author">
				<div class="carousel-caption d-none d-md-block">
					<h5><a class="btn btn-primary" asp-controller="Books" asp-action="Details" asp-route-id="@firstBook.Id">"@firstBook.Title" - @firstBook.Author</a></h5>
				</div>
			</div>
		}
		@if (secondBook != null)
		{
			<div class="carousel-item">
				<img class="d-block w-25" src="@secondBook.ImageUrl" alt="@secondBook.Title @secondBook.Author">
				<div class="carousel-caption d-none d-md-block">
					<h5><a class="btn btn-primary" asp-controller="Books" asp-action="Details" asp-route-id="@secondBook.Id">"@secondBook.Title" - @secondBook.Author</a></h5>
				</div>
			</div>
		}
		@if (thirdBook != null)
		{
			<div class="carousel-item">
				<img class="d-block w-25" src="@thirdBook.ImageUrl" alt="@thirdBook.Title @thirdBook.Author">
				<div class="carousel-caption d-none d-md-block">
					<h5><a class="btn btn-primary" asp-controller="Books" asp-action="Details" asp-route-id="@thirdBook.Id">"@thirdBook.Title" - @thirdBook.Author</a></h5>
				</div>
			</div>
		}
	</div>
	<a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
		<span class="carousel-control-prev-icon btn btn-primary" aria-hidden="true"></span>
		<span class="sr-only">Previous</span>
	</a>
	<a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
		<span class="carousel-control-next-icon btn btn-primary" aria-hidden="true"></span>
		<span class="sr-only">Next</span>
	</a>
</div>
<div class="mb-5"></div>

<div class="jumbotron">
	<div class="row">
		<h2 class="col-md-4 text-center">
			@Model.TotalBooks Total Books
		</h2>
		<h2 class="col-md-4 text-center">
			@Model.TotalRents Total Rents
		</h2>
		<h2 class="col-md-4 text-center">
			@Model.TotalUsers Total Users
		</h2>
	</div>
</div>

